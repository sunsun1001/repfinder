<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#C5BCBC"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sunsun1001.repfinder.detail_view"
    tools:showIn="@layout/activity_detail_view">

    <ImageView
        android:layout_width="134dp"
        android:layout_height="172dp"
        android:id="@+id/detailedImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/nameView"
        android:textColor="#000000"
        android:textSize="55px"
        android:layout_below="@+id/detailedImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/background"
        android:textColor="#000000"
        android:textSize="34px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameView"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/backgroundBody"
        android:textColor="#000000"
        android:textSize="27px"
        android:layout_below="@+id/background"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/com"
        android:textColor="#000000"
        android:textSize="34px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/backgroundBody"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/comBody"
        android:textColor="#000000"
        android:textSize="27px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/bills"
        android:textColor="#000000"
        android:textSize="34px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/comBody"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/billsBody"
        android:textColor="#000000"
        android:textSize="27px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bills" />

    <Button
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:text="Go Back"
        android:textSize="28px"
        android:textColor="#000000"
        android:background="#219653"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/detailedImage" />

</RelativeLayout>
